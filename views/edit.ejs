<h2>Product</h2>
<center>
<form action="/addproduct/edit" enctype="multipart/form-data" method="post">
<div class="form-group">
    <input type="hidden" class="form-control" name="_id" value="<%=data._id%>">
</div>
<div class="form-group">
    <label>Product name:</label>
    <input type="text" class="form-control" name="productname" value="<%=data.productname%>">
</div>
<div class="form-group">
    <label>Category:</label>
    <input type="text" class="form-control" name="category" value="<%=data.category%>">
</div>
<div class="form-group">
    <label>Price:</label>
    <input type="text" class="form-control" name="price" value="<%=data.price%>">
</div>
<div class="form-group">
    <label>Description:</label>
    <input type="text" class="form-control" name="description" value="<%=data.description%>">
</div>
<div class="form-group">
    <label>Image name:</label>
    <input type="text" class="form-control" name="imagename" value="<%=data.imagename%>">
</div>
<div class="field_wrapper">
    <div>
        <%for(var i=0;i< data.image.length;i+=1){%>
        <input type="file" name="image" value="/product_images/<%=data.image[i]%>">
        <%}%>
        <a href="javascript:void(0);" class="add_button" title="Add field">Add field</a>
    </div>
</div>
<button type="submit" class="btn btn-warning btn-lg">Submit</button>
</form>
    </center>

    